<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <include layout="@layout/app_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:orientation="vertical">

            <com.sun.study.view.CircleTextView
                android:layout_width="54dip"
                android:layout_height="wrap_content"
                app:ctv_circle_color="@color/red"
                app:ctv_circle_radius="24dip"
                app:ctv_circle_width="2dip"
                app:ctv_text_color="@color/red"
                app:ctv_text_size="20sp"
                app:ctv_text="1"/>

            <com.sun.study.view.CircleTextView
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:ctv_circle_color="@color/blue"
                app:ctv_circle_radius="25dp"
                app:ctv_circle_width="2dp"
                app:ctv_text_color="@color/blue"
                app:ctv_text_size="20sp"
                app:ctv_text="2"/>

            <com.sun.study.view.CircleTextView
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:ctv_circle_color="@color/orange"
                app:ctv_circle_radius="25dp"
                app:ctv_circle_width="2dp"
                app:ctv_text_color="@color/red"
                app:ctv_text_size="20dp"
                app:ctv_text="3"/>

            <com.sun.study.view.CircleTextView
                android:id="@+id/ctv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:ctv_circle_color="@color/black"
                app:ctv_circle_radius="15dp"
                app:ctv_circle_width="1dp"
                app:ctv_text_color="@color/black"
                app:ctv_text_size="10dp"
                app:ctv_text="3"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
