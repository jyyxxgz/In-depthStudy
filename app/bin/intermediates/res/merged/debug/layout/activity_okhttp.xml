<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <include layout="@layout/app_toolbar"/>

    <TextView
        style="@style/TvButtonStyle"
        android:layout_marginTop="16dp"
        android:text="获取北京天气 getCityWeather()"
        android:onClick="getCityWeather"/>

    <TextView
        style="@style/TvButtonStyle"
        android:text="获取北京天气 getCityWeatherSimple()"
        android:onClick="getCityWeatherSimple"/>

    <TextView
        style="@style/TvButtonStyle"
        android:text="获取北京天气 getCityWeatherDataSimple()"
        android:onClick="getCityWeatherDataSimple"/>

    <TextView
        style="@style/TvButtonStyle"
        android:text="获取北京天气 getCityWeatherDataEnqueue()"
        android:onClick="getCityWeatherDataEnqueue"/>

    <TextView
        style="@style/TvButtonStyle"
        android:text="北京可查询天气区域列表"
        android:onClick="getWeatherCityDistrictList"/>

</LinearLayout>